<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".Admin.AdminCreateStudentActivity">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:background="@color/colorPrimaryDark">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="22dp">

            <TextView
                android:id="@+id/titlepage"
                android:layout_marginTop="20dp"
                android:textSize="32sp"
                android:textColor="#FFF"
                android:text="Create New Student"
                android:gravity="center"
                android:fontFamily="@font/mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subtitlepage"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ml"
                android:text="Create The New Lecturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    //Content

    <LinearLayout
        android:id="@+id/rellay3"
        android:layout_below="@id/rellay1"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingTop="22dp">

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/addtitled"
                android:textSize="22sp"
                android:fontFamily="@font/mm"
                android:textColor="@color/colorPrimaryDark"
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/signup_username"
                android:textSize="18sp"
                android:inputType="text"
                android:maxLines="1"
                android:fontFamily="@font/ml"
                android:gravity="center"
                android:background="@drawable/bginputtask"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Username"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/addtitle"
                android:textSize="22sp"
                android:fontFamily="@font/mm"
                android:textColor="@color/colorPrimaryDark"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/signup_email"
                android:textSize="18sp"
                android:maxLength="100"
                android:fontFamily="@font/ml"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:gravity="center"
                android:background="@drawable/bginputtask"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Email" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/mm"
                android:textColor="@color/colorPrimaryDark"
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/signup_password"
                android:textSize="18sp"
                android:fontFamily="@font/ml"
                android:gravity="center"
                android:background="@drawable/bginputtask"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Password" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/rellay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/signup_button"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="Create Student"
            android:fontFamily="@font/mm"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:background="@drawable/bgbtncreate"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>




</RelativeLayout>