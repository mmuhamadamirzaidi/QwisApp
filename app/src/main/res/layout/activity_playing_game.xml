<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".PlayingGameActivity">

    <RelativeLayout
        android:id="@+id/quiz_footer"
        style="@style/QuizPageFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/txtScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/mm"
            android:text="CURRENT SCORE : 0" />

        <TextView
            android:id="@+id/txtTotalQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/mm"
            android:text="QUESTIONS : " />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quiz_footer"
            card_view:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/countdown"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10" />

                <TextView
                    android:id="@+id/question_text"
                    style="@style/QuizCardQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mm"
                    android:gravity="center"
                    android:text="@string/question_text"/>

                <!--<ImageView-->
                    <!--android:id="@+id/question_image"-->
                    <!--style="@style/QuizCardQuestion"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="200dp"-->
                    <!--android:gravity="center"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/logosecondaryblack" />-->


                <Button
                    android:id="@+id/btnAnswerA"
                    style="@style/QuizCardChoice.OddChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/question_button"
                    android:fontFamily="@font/ml"
                    android:gravity="center"
                    android:text="Answer A"
                    android:textSize="16sp" />

                <include layout="@layout/divider" />

                <Button
                    android:id="@+id/btnAnswerB"
                    style="@style/QuizCardChoice.EvenChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/question_button"
                    android:fontFamily="@font/ml"
                    android:gravity="center"
                    android:text="Answer B"
                    android:textSize="16sp" />

                <include layout="@layout/divider" />

                <Button
                    android:id="@+id/btnAnswerC"
                    style="@style/QuizCardChoice.OddChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/question_button"
                    android:fontFamily="@font/ml"
                    android:gravity="center"
                    android:text="Answer C"
                    android:textSize="16sp" />

                <include layout="@layout/divider" />

                <Button
                    android:id="@+id/btnAnswerD"
                    style="@style/QuizCardChoice.EvenChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/question_button"
                    android:fontFamily="@font/ml"
                    android:gravity="center"
                    android:text="Answer D"
                    android:textSize="16sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>